<!-- https://shopify.dev/themes/architecture/settings/input-settings -->
{% assign count = 0 %}

{% for block in section.blocks %}
  {%- if block.settings.show_announcement -%}

    {% case block.type %}
      {% when 'announcement' %}

        <div class="my-announcement-bar-{{ count }}">
            {% if template.name == 'index' or block.settings.show-on-homepage == false %}    
                <a href="{{ block.settings.link }}" class="my-announcement-bar__link">
                    <p class="my-announcement-bar__message ">
                        {{ block.settings.announcement_bar_textfield }} &nbsp;&nbsp; <Icon>{{ block.settings.icon_embed }}</Icon>  
                    </p>  
                </a>
            {% endif %}   
        </div>

        {%- style -%}

         .my-announcement-bar-{{ count }} {
            text-align: center;
          }
        
          .my-announcement-bar-{{ count }} .my-announcement-bar__message {
            {% if block.settings.bold-text %}
            font-weight: bold;
            {% endif %}
          
            display: flex;
            justify-content: center;
            align-items: center;

            font-size: 50px;

            text-transform: {{ block.settings.text_transform }};
            font-size: {{ block.settings.font_size }}px;
            padding-top: {{ block.settings.Height }}px;
            padding-bottom: {{ block.settings.Height }}px;          
            color: {{ block.settings.font-color }};
            background: {{ block.settings.background }};
          }
      
        {%- endstyle -%}

        {% assign count = count | plus: 1 %}

    {% endcase %}
  {% endif %}
{% endfor %}


{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_announcement",
          "label": "Show announcement",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "show-on-homepage",
          "label": "Only show on homepage",
          "default": false
        },
        {
          "type": "text",
          "id": "announcement_bar_textfield",
          "label": "Announcement text",
          "default": "type your announce here ..."
        },
        {
          "type": "select",
          "id": "text_transform",
          "label": "Text transform",
          "options": [
            {
              "value": "normal",
              "label": "Don't transform"
            },
            {
              "value": "uppercase",
              "label": "Uppercase"
            },
            {
              "value": "lowercase",
              "label": "Lowercase"
            },
            {
              "value": "capitalize",
              "label": "Capitalize"
            }
          ],
          "default": "normal"
        },
        {
          "type": "checkbox",
          "id": "bold-text",
          "label": "Bold text",
          "default": false
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 14,
          "max": 24,
          "step": 1,
          "unit": "px",
          "label": "Font size",
          "default": 16
        },
        {
          "type": "range",
          "id": "Height",
          "min": 0,
          "max": 30,
          "step": 1,
          "unit": "px",
          "label": "Padding",
          "default": 5
        },
        {
          "type": "html",
          "id": "icon_embed",
          "label": "Icon embed"
        },
        {
          "type": "color_background",
          "id": "background",
          "label": "Background",
          "default": "linear-gradient(#ffffff, #000000)"
        },
        {
          "type": "color",
          "id": "font-color",
          "label": "Font color",
          "default": "#000000"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}
